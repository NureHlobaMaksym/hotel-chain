<!doctype html>
<html lang="uk">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Реєстрація</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<div class="background-image"></div>
<header>
    <%- include('header'); %>
</header>
<div class="container mt-5">
    <div class="card m-auto p-4" style="width: 30em;">
        <h2 class="text-center">Реєстрація</h2>
        <% if (errorMessage) { %>
            <div class="alert alert-danger"><%= errorMessage %></div>
        <% } %>
        <form action="/register" method="POST">
            <div class="mb-3">
                <label for="first_name" class="form-label">Ім'я</label>
                <input maxlength="50" type="text" class="form-control" value="<%= typeof data !== "undefined" ? data.first_name : ""%>" id="first_name" name="first_name" required>
            </div>
            <div class="mb-3">
                <label for="last_name" class="form-label">Прізвище</label>
                <input maxlength="50" type="text" class="form-control" value="<%= typeof data !== "undefined" ? data.last_name : ""%>" id="last_name" name="last_name" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Електронна пошта</label>
                <input maxlength="320" type="email" class="form-control" value="<%= typeof data !== "undefined" ? data.email : ""%>" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Країна</label>
                <input maxlength="90" type="text" class="form-control" value="<%= typeof data !== "undefined" ? data.country : ""%>" id="country" name="country" required>
            </div>
            <div class="mb-3">
                <label for="user_phone_number" class="form-label">Номер телефону</label>
                <input maxlength="15" type="text" class="form-control" value="<%= typeof data !== "undefined" ? data.user_phone_number : ""%>" id="user_phone_number" name="user_phone_number" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Пароль</label>
                <input minlength="4" maxlength="100" type="password" class="form-control" id="password" name="password" required>
                <small class="form-text text-muted">Пароль має містити щонайменше 4 символи.</small>
            </div>
            <div class="w-100 text-center">
                <button type="submit" class="btn w-50 mt-4 btn-primary">Зареєструватися</button>
            </div>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>
